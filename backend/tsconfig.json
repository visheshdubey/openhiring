{
     "compilerOptions": {
          "target": "es2015",
          "module": "commonjs",
          "rootDir": "./src",
          "moduleResolution": "node",
          "types": ["node", "express"],
          "resolveJsonModule": true,
          "sourceMap": true,
          "outDir": "./dist",
          "esModuleInterop": true,
          "forceConsistentCasingInFileNames": true,
          "strict": true,
          "skipLibCheck": true,
          "typeRoots": ["node_modules/@types"],
          "baseUrl": "./",
          "paths": {
               "@/*": ["src/*"]
          }
     },
     "include": ["src/**/*.ts", "extensions.d.ts"],
     "exclude": ["node_modules"]
}
